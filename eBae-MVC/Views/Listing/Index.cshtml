@model IEnumerable<eBae_MVC.Models.Listing>

@{
    ViewBag.Title = "Browse Listings";
}

<h2>Browse Listings</h2>
<table class="display" width="80%" align="center">
    <tr>
        <th>Listing Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Owner</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <img src="@ViewBag.ImageURL@Html.DisplayFor(modelItem => item.ListingID)@ViewBag.JPG" width="150"></td>
        <td width="40%" style="text-align: justify;">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTimestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTimestamp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Username)
        </td>
        <td><center>@Html.ActionLink("View Listing", "Details", new { id = item.ListingID }, new { @class = "button" })</center></td>
    </tr>
}

</table>
