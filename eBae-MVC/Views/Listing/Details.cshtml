@model eBae_MVC.Models.Listing


@{
    ViewBag.Title = "Details";
}

<h2>View Listing: @Html.DisplayFor(model => model.Title)</h2>
<table style="width: 90%;" align="center" valign="top">
    <tbody>
        <tr>
            <td style="width: 20%;">
                <table style="width: 100%;"><tbody>
                        <tr>
                            <td><img src="@ViewBag.Image" width="520"/></td>
                        </tr>
                        <tr>
                            <td><b>Owner: </b>@Html.DisplayFor(model => model.User.Username)</td>
                            
                        </tr>
                        <tr>
                            <td>
                                <h2>Description</h2>
                                @Html.DisplayFor(model => model.Description)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td style="width: 30%;" valign="top">
                <table style="width: 100%">
                    <tbody>
                        <tr>
                            <td><strong>Current Price</strong></td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td><strong>Enter Amount</strong></td>
                            <td>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                <input id="amount" name="amount" type="text" placeholder="" class="form-control input-md" required="">
                                <input type="submit" value="Bid!" />
                            }
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Time Remaining</strong></td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr>
                            <td><strong>End Time</strong></td>
                            <td>@Html.DisplayFor(model => model.EndTimestamp)</td>
                        </tr>
                        <tr>
                            <td><strong>Start Time</strong></td>
                            <td>@Html.DisplayFor(model => model.StartTimestamp)</td>
                        </tr>
                    </tbody>
                </table>
            </td>
            <td style="width: 30%;" valign="top">
            <h2>Bidding History</h2>
            </td>
        </tr>
    </tbody>
</table>
<center>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "button" })
</center>